<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    tools:context="com.example.fujitaken.markerapp.MainActivity"
    android:background="@drawable/seminor2f">


    <Spinner
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/spinner"
        android:layout_weight="5"
        android:entries="@array/list"
        android:spinnerMode="dialog" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3">

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_gravity="bottom|left"
            android:layout_marginRight="50dp"
            android:scaleType="fitCenter"
            android:id="@+id/imageButton"
            android:background="@null"
            android:onClick="onClick" />

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_gravity="bottom|left"
            android:layout_marginRight="15dp"
            android:scaleType="fitCenter"
            android:id="@+id/imageButton2"
            android:background="@null"
            android:onClick="onClick" />

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_gravity="bottom|left"
            android:layout_marginRight="50dp"
            android:scaleType="fitCenter"
            android:id="@+id/imageButton3"
            android:background="@null"
            android:onClick="onClick" />
        <ImageButton
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_gravity="bottom|left"
            android:layout_marginRight="5dp"
            android:scaleType="fitCenter"
            android:id="@+id/imageButton4"
            android:background="@null"
            android:onClick="onClick" />
        <ImageButton
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_gravity="bottom|left"
            android:id="@+id/imageButton5"
            android:layout_marginRight="50dp"
            android:scaleType="fitCenter"
            android:background="@null"
            android:onClick="onClick" />
        <ImageButton
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_gravity="bottom|left"
            android:id="@+id/imageButton6"
            android:layout_marginRight="15dp"
            android:scaleType="fitCenter"
            android:background="@null"
            android:onClick="onClick" />
        <ImageButton
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_gravity="bottom|left"
            android:id="@+id/imageButton7"
            android:layout_marginRight="35dp"
            android:scaleType="fitCenter"
            android:background="@null"
            android:onClick="onClick" />
        <ImageButton
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_gravity="bottom|left"
            android:id="@+id/imageButton8"
            android:layout_marginRight="10dp"
            android:scaleType="fitCenter"
            android:background="@null"
            android:onClick="onClick" />
        <ImageButton
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_gravity="bottom|left"
            android:id="@+id/imageButton9"
            android:scaleType="fitCenter"
            android:background="@null"
            android:onClick="onClick" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="5">
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3">

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_gravity="top|left"
            android:layout_marginRight="50dp"
            android:scaleType="fitCenter"
            android:id="@+id/imageButtonN"
            android:background="@null"
            android:onClick="onClick" />

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_gravity="top|left"
            android:layout_marginRight="15dp"
            android:scaleType="fitCenter"
            android:id="@+id/imageButtonN2"
            android:background="@null"
            android:onClick="onClick" />

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_gravity="top|left"
            android:layout_marginRight="15dp"
            android:scaleType="fitCenter"
            android:id="@+id/imageButtonN3"
            android:background="@null"
            android:onClick="onClick" />
        <ImageButton
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_gravity="top|left"
            android:layout_marginRight="20dp"
            android:scaleType="fitCenter"
            android:id="@+id/imageButtonN4"
            android:background="@null"
            android:onClick="onClick" />
        <ImageButton
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_gravity="top|left"
            android:id="@+id/imageButtonN5"
            android:layout_marginRight="30dp"
            android:scaleType="fitCenter"
            android:background="@null"
            android:onClick="onClick" />
        <ImageButton
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_gravity="top|left"
            android:id="@+id/imageButtonN6"
            android:layout_marginRight="15dp"
            android:scaleType="fitCenter"
            android:background="@null"
            android:onClick="onClick" />
        <ImageButton
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_gravity="top|left"
            android:id="@+id/imageButtonN7"
            android:layout_marginRight="15dp"
            android:scaleType="fitCenter"
            android:background="@null"
            android:onClick="onClick" />
        <ImageButton
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_gravity="top|left"
            android:id="@+id/imageButtonN8"
            android:layout_marginRight="30dp"
            android:scaleType="fitCenter"
            android:background="@null"
            android:onClick="onClick" />
        <ImageButton
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_gravity="top|left"
            android:id="@+id/imageButtonN9"
            android:layout_marginRight="15dp"
            android:scaleType="fitCenter"
            android:background="@null"
            android:onClick="onClick" />
        <ImageButton
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_gravity="top|left"
            android:id="@+id/imageButtonN10"
            android:scaleType="fitCenter"
            android:background="@null"
            android:onClick="onClick" />

    </LinearLayout>

</LinearLayout>
